<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>内容</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.name %></td>
    <td><%= blog.email %></td>
    <td><%= blog.content %></td>

    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "ブログを編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog.id), method: :delete %></td>
  </tr>
<% end %>
</table>

<br>

<%= link_to '新しくブログを投稿する', '/blogs/new' %>